<h1>Edit Client</h1>
<%=form_for @client do |f| %>
  
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%=f.label :hair_color %>
  <%=f.text_field :hair_color %>

  <%=f.label :eye_color %>
  <%=f.text_field :eye_color %>

  <%=f.label :gender %>
  <%=f.text_field :gender %>

  <%=f.label :age %>
  <%=f.number_field :age %>

  <%=f.label :alive %>
  <%=f.text_field :alive %>

  <%=f.submit%>
<%end%>
